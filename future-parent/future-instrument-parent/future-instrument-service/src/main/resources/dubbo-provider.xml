<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	   xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	   xmlns:dubbo="http://code.alibabatech.com/schema/dubbo"
	   xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd
	   http://code.alibabatech.com/schema/dubbo http://code.alibabatech.com/schema/dubbo/dubbo.xsd
	   ">

	<!-- 提供方应用信息，用于计算依赖关系 -->
	<dubbo:application name="future-instrument-service" />

	<!-- 使用zookeeper注册中心暴露服务地址 -->
	<dubbo:registry protocol="zookeeper" address="${dubbo.registry.address}" />

	<!-- 用dubbo协议在20880端口暴露服务 -->
	<dubbo:protocol name="dubbo" port="20880" />
		
	<!-- 合约服务接口 -->
	<dubbo:service interface="com.future.instrument.api.service.InstrumentService" ref="instrumentService" retries="0"/>
	<bean id="instrumentService" class="com.future.instrument.service.impl.InstrumentServiceImpl"/>

    <!-- 手续费接口 -->
	<dubbo:service interface="com.future.instrument.api.service.CommissionService" ref="commissionService" retries="0"/>
	<bean id="commissionService" class="com.future.instrument.service.impl.CommissionServiceImpl"/>
	
	<!-- 保证金接口 -->
	<dubbo:service interface="com.future.instrument.api.service.MarginService" ref="marginService" retries="0"/>
	<bean id="marginService" class="com.future.instrument.service.impl.MarginServiceImpl"/>
	
	<!-- 投资者合约接口 -->
    <dubbo:service interface="com.future.instrument.api.service.InvestorInstrumentService" ref="investorInstrumentService" retries="0"/>
    <bean id="investorInstrumentService" class="com.future.instrument.service.impl.InvestorInstrumentServiceImpl"/>
</beans>