<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:dubbo="http://code.alibabatech.com/schema/dubbo"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd
       http://code.alibabatech.com/schema/dubbo http://code.alibabatech.com/schema/dubbo/dubbo.xsd
       ">

    <dubbo:application name="future-quota-service" />
    
    <!-- 用dubbo协议在20885端口暴露服务 -->
    <dubbo:protocol name="dubbo" port="20885" />
    
    <!-- 使用zookeeper注册中心暴露服务地址 -->
    <dubbo:registry protocol="zookeeper" address="${dubbo.registry.address}" />
    
    <!-- EMA接口 -->
    <dubbo:service interface="com.future.quota.api.service.EmaService" ref="emaService" retries="0"/>
    <bean id="emaService" class="com.future.quota.service.impl.EmaServiceImpl"/>
    
</beans>
